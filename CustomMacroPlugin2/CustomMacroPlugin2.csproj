  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="CustomMacroBase">
      <HintPath>..\SharedLibs\libs\CustomMacroBase.dll</HintPath>
      <Private>False</Private>
    </Reference>
    <Reference Include="TrarsUI.Shared">
      <HintPath>..\SharedLibs\libs\TrarsUI.Shared.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
    <Resource Include="MacroSample\Game_JoyConMapper\Packet\Resources\Joycon(L).png" />
  </ItemGroup>
  
</Project>
